{
  "hosting": [
    {
      "target": "old",
      "public": "old_build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/packages/**",
        "**/node_modules/**"
      ]
    },
    {
      "target": "head",
      "public": "production",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/packages/**",
        "**/node_modules/**"
      ]
    },
    {
      "target": "test",
      "public": "build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/packages/**",
        "**/node_modules/**"
      ]
    }
  ]
}